generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id     String @id @default(uuid())
  userId String
  name   String
}

model Product {
  id          String  @id @default(uuid())
  name        String
  description String?
  price       String
  image       String

  categories   Categories @relation(fields: [categoriesId], references: [id])
  categoriesId String

  Order Order[]
}

model Categories {
  id          String @id @default(uuid())
  name        String
  description String

  product Product[]
}

model Order {
  id       String @id @default(uuid())
  total    String
  Quantity Int
  State    String @default("pending")

  product   Product @relation(fields: [productId], references: [id])
  productId String
}
